#include<conio.h>
#include<stdio.h>
#include<stdlib.h>
int main ()
{
	int n,i,t,s;
	int A [20];
	printf (" Nhap n");
	scanf ("%d",&n);
	i=0;
	while(n!=0)
	{
		A[i]=n%10;
		n=n/10;
		i++;
	}
	t=i-1;
	s=0;
	for (i=t;i >=0;i--)
	s=s +A[i];
	printf ("\n tong cac chu so la:%d",s);
    printf("\n");
    return 0;
}

	